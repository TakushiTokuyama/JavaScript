<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/index01.css">
    <title>Index01</title>
</head>

<body>
    <h1><%= message %></h1>
    <h1><%= success %></h1>
    <div>
        <form action="/create" method="post">
            <label>ZaikoCode:</label>
            <input type="text" name="ZaikoCode" />
            <label>ProductName:</label>
            <input type="text" name="ProductName" />
            <label>ZaikoStock:</label>
            <input type="text" name="ZaikoStock" />
            <input type="submit" value="登録" />
        </form>
    </div>
    <ul>

        <p>Zaiko Table</p>
        <% zaiko.forEach((value) => { %>
        <li><%= value.ZaikoCode %></li>
        <li><%= value.ProductName %></li>
        <li>
            <form action="/delete/<%= value.ZaikoCode %>" method="post">
                <input type="submit" value="削除" />
            </form>
            <form name="update_form_post" class="update_form" action="/update/<%=　value.ZaikoCode　%>" method="post">
                <li><input class="update_data" type="text" name="zaikoSu" value="<%= value.ZaikoStock %>" /></li>
                <input type="submit" value="更新" />
            </form>
        </li>
        <% }) %>
    </ul>
    <script src="/fronService01.js"></script>
</body>

</html>