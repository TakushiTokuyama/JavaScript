<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="sample02.css">
    <title>Sample01</title>
</head>

<body>
    <form action="/" method="POST">
        <div>
            <label for="number">Number:</label>
            <input id="number" type="text" name="number" />
        </div>
        <div>
            <label for="name">Name:</label>
            <input id="name" type="text" name="name" />
        </div>
        <div>
            <input id="posting" type="submit" value="送信" />
            <button type="button" id="clear" title="結果クリアボタン">クリア</button>
        </div>
    </form>
    <div>
        <div>
            <label class=" danger">method:</label>
            <div><%= method %></div>
        </div>
        <div>
            <label class="danger">url:</label>
            <div><%= url %></div>
        </div>
        <div>
            <label class="danger">number:</label>
            <div id="resultNumber"><%= number %></div>
        </div>
        <div>
            <label class="danger">name:</label>
            <div id="resultName"><%= name %></div>
        </div>
    </div>
    <script src="syori02.js"></script>
</body>

</html>