<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ReadFileSample</title>
</head>

<body>
    <form action="/" method="POST">
        <input type="hidden" name="hidden" />
        <div>
            <label for="number">Number:</label>
            <input id="number" type="text" name="number" />
        </div>
        <div>
            <label for="name">Name:</label>
            <input id="name" type="text" name="name" />
        </div>
        <div>
            <input id="posting" type="submit" value="送信" />
        </div>
    </form>
    <form id="delete" name="post_delete" action="/delete" method="POST" />
    <button type="button" id="deleteBtn">削除</button>

    <ul id="list"><% if(text.length != 0){%>
        <% text.forEach(function (item){ %>
        <li><%= item %></li>
        <% }); %>
        <% } %>
    </ul>
    <script src="lib/frontService03.js"></script>
</body>

</html>